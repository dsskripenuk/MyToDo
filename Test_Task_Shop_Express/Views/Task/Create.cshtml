@model TaskModel

<div class="container">
    <h2 style="color: white">Create Task</h2>
    <form asp-action="Create" method="post" class="edit text-center my-4">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Title" class="text-light"></label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="form-group">
            <div class="form-check" style="margin-top: 20px; margin-bottom: 20px">
                <input asp-for="IsDone" class="form-check-input" />
                <label class="form-check-label" asp-for="IsDone">Is Done</label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>
